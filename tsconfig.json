{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "outDir": "dist",
    "types": ["node"],
    "module": "ESNext",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "paths": {

    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/validators-source",
    "node_modules",
    "dist",
    "lib",
    "coverage",
    "test/**/*.spec.ts"
  ]
}
